<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Record Meeting</title>
        <% include ./partials/head %>
        <!-- CSS -->
        <link href="/css/record.css" type="text/css" rel="stylesheet">
    </head>
    <body>  
        <% include ./partials/navbar %>      
        
        <div class="container main">
            <h1>Meeting <%= mtg_name %></h1>
            <p id="mtg_id">Meeting ID: <%= mtg_id %></p>
            <p id="changeME">Meeting Code: <%= mtg_code %></p>
            <p id="state" style="display: none;">Ready</p>
        </div>
        
        
        
        <div class="container">
            <section class="main-controls">
                <canvas class="visualizer" height="60px"></canvas>
                <div id="buttons">
                    <ul class="list-inline">
                    <!--<li class="list-inline-item">    <button type="submit" class="record">Record</button> </li>-->
                    <li class="list-inline-item">    <button class="stop">Stop</button> </li>
                    <li class="list-inline-item">    <button type="submit" class="hold">Hold</button> </li>
                    <li class="list-inline-item">    <button type="submit" class="clip30">Clip 30</button> </li>
                    <li class="list-inline-item">    <button type="submit" class="clip60">Clip 60</button> </li>
                    </ul>
                </div>
              </section>
        
              <section class="sound-clips">
              <!-- sound clips appended here through javascript-->    
              </section>
            
        </div>
        
        <% include ./partials/footer %>
        
        <!-- Our Code -->
        <script src="scripts/frontend.js"></script>
        <script src="scripts/audiobuffer-slice.js"></script>
        <script src="scripts/app.js"></script>

    </body>
</html>
